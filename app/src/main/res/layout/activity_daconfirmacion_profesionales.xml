<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DAConfirmacionProfesionalesActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDAConfProfesionalesHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora" />

            <TextView
                android:id="@+id/tvDAConfProfesionalesDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DirecciÃ³n" />

            <TextView
                android:id="@+id/tvDAConfProfesionalesApellidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellidos" />

            <TextView
                android:id="@+id/tvDAConfProfesionalesFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha" />

            <TextView
                android:id="@+id/tvDAConfProfesionalesLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugar" />

            <TextView
                android:id="@+id/tvDAConfProfesionalesUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usuario" />

            <TextView
                android:id="@+id/tvDAConfProfesionalesNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDAConfProfesionalesModificar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modificar" />

            <Button
                android:id="@+id/btnDAConfProfesionalesCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar" />
        </LinearLayout>

        <Button
            android:id="@+id/btnNext4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ClickLogin4"
            android:text="Volver al Login" />
    </LinearLayout>


</LinearLayout>