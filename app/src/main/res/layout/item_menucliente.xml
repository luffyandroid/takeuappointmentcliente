<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Info"
        android:padding="@dimen/d10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivItemMenuClienteImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/d7"
            app:srcCompat="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemMenuClienteEmpresa"
                style="@style/Info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Nombre de la empresa que es todo muy guay"
                android:inputType="textMultiLine"
                android:textSize="@dimen/d18" />

            <TextView
                android:id="@+id/tvItemMenuClienteDescripcion"
                style="@style/Info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Me dedico a una cosa guay del paraguay:"
                android:inputType="textMultiLine"
                android:textSize="@dimen/d15" />

            <TextView
                android:id="@+id/tvItemMenuClienteDireccion"
                style="@style/Info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Me encuentro en varias ciudaddes con elcorazÃ³n dividido"
                android:inputType="textMultiLine"
                android:textSize="@dimen/d14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
