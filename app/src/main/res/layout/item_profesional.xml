<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvItemProfHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <ImageView
                android:id="@+id/ivItemProfImagen"
                android:layout_width="@dimen/d80"
                android:layout_height="@dimen/d80"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btnItemProfImagen"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d30"
                android:textSize="@dimen/d8"
                android:text="subir imagen"
                android:onClick="ClickImagen"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemProfNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="TextView"
                android:textSize="@dimen/d15" />

            <EditText
                android:id="@+id/etItemProfDatos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textMultiLine"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
